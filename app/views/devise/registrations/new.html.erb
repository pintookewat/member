<h2 class= "text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name", class:"form-control", placeholder: 'Enter your Name' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: 'Enter your Email' %>
  </div>

  <div class="field">
  <%= f.label :gender, 'Gender' %>
  <br>
  <span class="">
    <%= f.radio_button :gender, 'Male' %>
    <%= f.label :gender, 'Male', :value => 'Male' %>
  </span>
  <span class=" ml-2">
    <%= f.radio_button :gender, 'Female' %> 
    <%= f.label :gender, 'Female', :value => 'Female' %>
  </span>
  <span class=" ml-2">
    <%= f.radio_button :gender, 'Other' %>
    <%= f.label :gender, 'Other', :value => 'Other' %>
  </span>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class:"form-control", placeholder: 'Enter your Phone' %>
  </div>

  <div class="field">
    <%= f.label :proffesion %><br />
   <%= f.select :proffesion, options_for_select([["Select One", ""], "Student", "Work", "Office", "Home", "Other"]),{}, class:'form-control' %>
  </div>  

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: 'Enter your Password' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder: 'Enter your Confirm Password' %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-dark" %>
  </div>
<% end %>


<%= render "devise/shared/links" %>

<style type="text/css">
  
  .error{
    border: 1px solid green;
  }

</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>

<script type="text/javascript">
  
$( document ).ready(function() {

  $("#new_user").validate({
    rules: {
      user[phone]: "required",
      user[full_name]: "required",
      `user[email]`: {
        required: true,
        email: true 
      },
    },

    messages: {
      user[phone]: "First Name field cannot be blank!",
      user[full_name]: "Last Name field cannot be blank!",
      `user[email]` : "Please enter a valid email address"
    },
    highlight: function (element) {
        $(element).addClass('error');
        alert("hello")
    },
    unhighlight: function (element) {
      $(element).removeClass('error');
    },

  });

});
</script>